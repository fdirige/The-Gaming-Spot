<div class="row justify-space-between-md">
    <div class="login-card">
        <h2 class="page-title"> Login </h2>
        <form class="form login-form">
            <div class="group-form">
                <label for="email-login">Email:</label>
                <input class="input-form" type="text" id="email-login"/>
            </div>
            <div class="group-form">
                <label for="login-password">Password:</label>
                <input class="input-form" type="text" id="login-password"/>
            </div>
            <div class="group-form">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
            <br>
        </form>
    </div>
    <div class="signup-card">
        <h2 class="page-title"> Sign up </h2>
        <form class="form signup-form">
            <div class="group-form">
                <label for="signup-firstname">First name: </label>
                <input class="input-form" type="text" id="signup-firstname"/>
            </div>
            <div class="group-form">
                <label for="signup-lastname">Last name: </label>
                <input class="input-form" type="text" id="signup-lastname"/>
            </div>
            <div class="group-form">
                <label for="signup-username">Username: </label>
                <input class="input-form" type="text" id="signup-username"/>
            </div>
            <div class="group-form">
                <label for="signup-email">Email: </label>
                <input class="input-form" type="text" id="signup-email"/>
            </div>
            <div class="group-form">
                <label for="signup-password">Password: </label>
                <input class="input-form" type="text" id="signup-password"/>
            </div>
            <div class="group-form">
                <button class="btn btn-primary" type="submit"> Sign up </button>
            </div>
            <br>
        </form>
    </div>
</div>

<script src="./my-app/src/login-signup.js"></script>